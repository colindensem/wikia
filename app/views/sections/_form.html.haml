= form_with(model: [section.article, section], local: true, class: 'mui-form') do |form|
  - if section.errors.any?
    #error_explanation
      %h2
        = pluralize(section.errors.count, "error")
        prohibited this section from being saved:
      %ul
        - section.errors.full_messages.each do |message|
          %li= message
  .mui-textfield
    = form.label :title
    = form.text_field :title, id: :section_title, required: true
  .mui-textfield
    = form.label :content
    = form.text_area :content, id: :section_content, required: true, rows: 10
  .actions
    = form.submit class: 'mui-btn mui-btn--raised'