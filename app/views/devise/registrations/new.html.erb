<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mui-form') do |f| %>
  <%= devise_error_messages! %>

  <div class="mui-textfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>
  <div class="mui-textfield">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, required: true %>
  </div>
   <div class="mui-textfield">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, required: true %>
  </div>
  <div class="mui-textfield">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true%>
  </div>

  <div class="mui-textfield">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: 'mui-btn mui-btn--raised'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
