<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mui-form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mui-textfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'mui-btn mui-btn--raised' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
