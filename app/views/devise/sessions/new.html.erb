<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mui-form') do |f| %>
  <div class="mui-textfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="mui-textfield">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="mui-checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'mui-btn mui-btn--raised' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
